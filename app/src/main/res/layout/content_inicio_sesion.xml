<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cj.mati.InicioSesion"
    tools:showIn="@layout/activity_inicio_sesion"
    android:padding="18dp">

    <Button
        android:id="@+id/inicio_sesion_btn_vermapa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:text="@string/inicio_sesion_btn_vermapa_texto" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/logo" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_usuario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/inicio_sesion_edt_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inicio_sesion_edt_usuario_hint"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/inicio_sesion_edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inicio_sesion_edt_password_hint"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/inicio_sesion_btn_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:text="@string/inicio_sesion_btn_iniciar_sesion_texto" />
</LinearLayout>

        android:layout_margin="2dp"/>
    <TextView
        android:id="@+id/ti_txv_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_margin="5dp"/>

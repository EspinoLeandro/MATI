<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context="layout.capturista_tienda_agregar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información de Contacto"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/capturista_tienda_agregar_nombre_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/capturista_tienda_agregar_nombre_hint"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giro: "/>

            <Spinner
                android:id="@+id/capturista_tienda_agregar_giro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_nombre_encargado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/capturista_tienda_agregar_nombre_encargado_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/capturista_tienda_agregar_nombre_encargado_hint"
                    android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_edadEncargado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/capturista_tienda_agregar_edad_encargado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad del encargado:"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/capturista_tienda_agregar_telefono_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/capturista_tienda_agregar_telefono_hint"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/capturista_tienda_agregar_email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/capturista_tienda_agregar_email_hint"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:background="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="3dp"/>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"/>

            <TextView
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación: "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/capturista_tienda_agregar_ubicacion"
                    android:text="@string/capturista_tienda_agregar_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_place_white_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/capturista_tienda_agregar_longitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/capturista_tienda_agregar_latitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "/>

            <Spinner
                android:id="@+id/capturista_tienda_agregar_direccion_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Municipio: "/>

            <Spinner
                android:id="@+id/capturista_tienda_agregar_direccion_municipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colonia: "/>

            <Spinner
                android:id="@+id/capturista_tienda_agregar_direccion_colonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_direccionCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/capturista_tienda_agregar_direccion_cp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Codigo Postal:"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/capturista_tienda_agregar_direccionCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/capturista_tienda_agregar_direccion_calle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Calle:"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/capturista_tienda_agregar_cancelar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/capturista_tienda_agregar_cancelar_hint"/>

                <Button
                    android:id="@+id/capturista_tienda_agregar_guardar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/capturista_tienda_agregar_guardar_hint"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
